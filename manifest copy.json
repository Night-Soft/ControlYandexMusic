{
    "manifest_version": 2,
    "name": "Yandex music control",
    "description": "Yandex music control",
    "version": "1.0",
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["http://*/*"],
        "js": ["contentScript.js"]
    }],
    "web_accessible_resources": ["pagescript.js"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "unlimitedStorage",
        "notifications",
        "activeTab",
        "tabs"

    ]
}